<% @zombies.each do |zombie| %>
  <tr>
    <td><%= link_to zombie.name, zombie %></td>
    <!-- <td><%= truncate zombie.avatar %></td> -->
    <td><%= zombie.bio %></td>
    <td><%= zombie.death %></td>
