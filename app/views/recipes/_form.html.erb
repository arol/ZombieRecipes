<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label "Autor" %>
		<%= f.select :zombie_id, @zombies.collect {|z| [z.name, z.id]} %>
	</div>
	
  <div class="field">
    <%= f.label "Titol" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Preparació" %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br />
    <%= f.text_field :ingredients %>
  </div>
  <div class="field">
    <%= f.label "Temps de cocció" %><br />
    <%= f.time_select :cooktime %>
  </div>
  <div class="field">
    <%= f.label "Imatge" %><br />
    <%= f.text_field :imatge %>
  </div>
  <div class="field">
    <%= f.label "Valoració" %><br />
    <%= f.number_field :rating %>
  </div>
  <div class="field">
    <%= f.label "Nombre de vots" %><br />
    <%= f.number_field :numVotes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
