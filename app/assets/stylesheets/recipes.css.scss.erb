div.recipe{
width: 900px;
padding:20px 24px;
margin-bottom:20px;
background: url( <%= asset_path('paper.png') %>) ;
-webkit-box-shadow: 0px 3px 2px #999;
box-shadow: 0px 3px 2px #999;

  h2{
	 font-family: 'UniversLTStd49LtUltraCn', sans-serif;
    text-shadow: 0px 1px 1px rgba(255,255,255,0.7);
    font-size:38px; 
    float:left;
    margin-bottom:0px;
    margin-top:5px;
    a{
      color: #222;
    }
  }
  h3{
    float:right;
    margin-bottom:0px;
    margin-top:6px;
    padding-left:10px;
  }
  p{
    font-family: 'Maven Pro';
  }
  p.body{
    font-size:16px;
  }
  .ingredients{
      padding-left:35px;
      padding-top:5px;
      height:25px;
      background: url( <%= asset_path('tomato.png') %>) no-repeat;
      color:#888;
  }
  img.imatge{
    margin:25px 0px 15px 15px;
    width:380px;
    float:left;
    border: 5px solid #FFF;
	 -webkit-box-shadow: 0px 3px 2px #999;
 	 box-shadow: 0px 3px 2px #999;
    -webkit-transform: rotate(-1deg);
  }
  .gravatar{
    width:30px;
    float:right; 
  }
  .recepta{
    width:450px;
    float:left;
    margin-top:40px;
    margin-left:30px;
  }
}

