div.recipe{
	width: 900px;
	padding:20px 24px;
	margin-bottom:20px;
	background: url( <%= asset_path('paper.png') %>) ;
	-webkit-box-shadow: 0px 3px 2px #999;
	box-shadow: 0px 3px 2px #999;
	
	border-top-right-radius: 10px;

  h2{
	font-family: 'Amatic SC', sans-serif;
	font-weight: 700;
/*    text-shadow: 0px 1px 0px rgba(255,255,255,0.7);*/
    font-size:38px; 
    float:left;
    margin-bottom:0px;
    margin-top:5px;
    a{
      color: #444;
    }
  }
  h3{
    float:right;
    margin-bottom:0px;
    margin-top:6px;
    padding-left:10px;
  }
	h4{
		font-family: 'Amatic SC', sans-serif;
		text-shadow: 0px -1px 0px #666;
		text-transform:uppercase;
		font-size:40px;

		color: rgba(150,150,150,0.6);
		margin-top: 0px;
		margin-bottom:10px;
	}
  p{
    font-family: 'Maven Pro';
  }
  p.body{
    font-size:16px;
  }
  .ingredients{
	  margin-top: 50px;
	  p{
		  padding-left:35px;
	      padding-top:5px;
	      height:25px;
	      background: url( <%= asset_path('tomato.png') %>) no-repeat;
	      color:#888;
	  }
  }
  img.imatge{
    margin:25px 0px 15px 15px;
    width:380px;
    float:left;
    border: 5px solid #FFF;
	 -webkit-box-shadow: 0px 3px 2px #999;
 	 box-shadow: 0px 3px 2px #999;
    -webkit-transform: rotate(-1deg);
  }
  .gravatar{
    width:30px;
    float:right; 
  }
  .recepta{
    width:450px;
    float:left;
    margin-top:40px;
    margin-left:30px;
  }
}

.rating-star{
	display: block;
	height: 20px;
	width: 22px;
	background: url(<%= asset_path('rating_sprite.png') %>) no-repeat;
	float:left;
	background-position: 0px -20px;
	&.on{
		background-position: 0px -42px !important;
	}
	&.achieved{
		background-position: 0px 0px;
	}
}

.numVot{
	height: 20px;
	float:left;
	margin-left:10px;

	color: #666;
	font-weight:bold;
	text-shadow: 0px 1px 0px #fff;

}

