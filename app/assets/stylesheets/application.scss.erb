@font-face {
    font-family: 'UniversLTStd49LtUltraCn';
    src: url('/assets/Univers/universltstd-lightultracn-webfont.eot');
    src: url('/assets/Univers/universltstd-lightultracn-webfont.eot?#iefix') format('embedded-opentype'),
         url('/assets/Univers/universltstd-lightultracn-webfont.woff') format('woff'),
         url('/assets/Univers/universltstd-lightultracn-webfont.ttf') format('truetype'),
         url('/assets/Univers/universltstd-lightultracn-webfont.svg#UniversLTStd49LtUltraCn') format('svg');
    font-weight: normal;
    font-style: normal;

}

body{
	background-image: url(<%= asset_path('vichy.png') %>);
}

#wrapper{
	width: 960px;
	margin: 0 auto;
}

h1{
		font-family: 'UniversLTStd49LtUltraCn', sans-serif;
		text-transform:uppercase;
		font-size: 40px;
		
		text-shadow: 0px -1px 0px #fff;
}

header#logo{
	h1{
		font-size: 72px;
		text-transform:uppercase;
		text-shadow: 0px -2px 0px #fff;
		
		color: #d54b1a;
	}
}

nav#main{
	ul{
		margin:0;
		padding:0;
		li{
			list-style-type: none;
			float:left;
			padding: 5px;
			display:block;
			
			margin-left:10px;
			
			-moz-border-radius: 5px;
			-webkit-border-radius: 5px;
			border-radius: 5px;
			
			-o-transition: all .2s linear;
			-moz-transition: all .2s linear;
			-webkit-transition: all .2s linear;
			transition: all .2s linear;
			
			font-weight: bold;
		}
		li:hover{
			background-color: #b8b8b8;
			a{
				color: #d54b1a;
			}
			text-shadow: 0px 1px 0px rgba(255,255,255,0.7);
		}
	}
	
	border-radius: 10px;
	background-image: url(<%= asset_path('roughcloth.png') %>);
	padding:10px;
	
	border:1px solid #888;
	
	-webkit-box-shadow: 0px 1px 1px #999, inset 0px 2px 0px #fff;
	box-shadow: 0px 1px 8px .5 #000, inset 0px 2px 0px #fff;
}

.clear{
	clear: both;

}

a{
	color: #666;
	text-decoration:none;
}a:hover{
	color: #d54b1a;
}

table{
	border-collapse:collapse;
	tbody{
		th{
			background-color: #333;
			color: #ddd;
			padding: 5px;

		}
		tr{
			td{
				padding: 5px;		
			}
		}
		tr:nth-child(odd){
			background-color: rgba(190,190,190, 0.6);
			border-top: 1px solid #bbb;
			border-bottom: 1px solid #bbb;
		}
	}
}