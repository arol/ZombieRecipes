html, body{
	width:100%;
	padding:0;
	margin:0;
	font-family: Lucida, sans-serif;
}

@font-face {
    font-family: 'UniversLTStd49LtUltraCn';
    src: url('/fonts/Univers/universltstd-lightultracn-webfont.eot');
    src: url('/fonts/Univers/universltstd-lightultracn-webfont.eot?#iefix') format('embedded-opentype'),
         url('/fonts/Univers/universltstd-lightultracn-webfont.woff') format('woff'),
         url('/fonts/Univers/universltstd-lightultracn-webfont.ttf') format('truetype'),
         url('/fonts/Univers/universltstd-lightultracn-webfont.svg#UniversLTStd49LtUltraCn') format('svg');
    font-weight: normal;
    font-style: normal;

}

body{
	background-image: url(<%= asset_path('black_denim.png') %>);
}
.wrapper{
	background-image: url(<%= asset_path('vichy.png') %>);
	padding-bottom: 75px;
}

.content{
	width: 960px;
	margin: 0 auto;
	padding: 20px 30px;
}

h1{
		font-family: 'UniversLTStd49LtUltraCn', sans-serif;
		text-transform:uppercase;
		font-size: 40px;
		
		text-shadow: 0px -1px 0px #fff;
}

header#logo{
	h1{
		font-size: 72px;
		text-transform:uppercase;
		text-shadow: 0px -2px 0px #fff;
		
		color: #d54b1a;
	}
}

nav#main{
	ul{
		margin:0;
		padding:0;
		li{
			list-style-type: none;
			float:left;
			padding: 5px;
			display:block;
			
			margin-left:10px;
			
			-moz-border-radius: 5px;
			-webkit-border-radius: 5px;
			border-radius: 5px;
			
			-o-transition: all .2s linear;
			-moz-transition: all .2s linear;
			-webkit-transition: all .2s linear;
			transition: all .2s linear;
			
			font-weight: bold;
		}
		li:hover{
			background-color: rgba(184, 184, 184, 0.5);
			a{
				color: #d54b1a;
			}
			text-shadow: 0px 1px 0px rgba(255,255,255,0.7);
		}
	}
	
	border-radius: 10px;
	background-image: url(<%= asset_path('roughcloth.png') %>);
	padding:10px;
	
	border:1px solid #888;
	
	-webkit-box-shadow: 0px 1px 1px #999, inset 0px 2px 0px #fff;
	box-shadow: 0px 1px 8px .5 #000, inset 0px 2px 0px #fff;
}

.clear{
	clear: both;

}

a{
	color: #666;
	text-decoration:none;
}a:hover{
	color: #d54b1a;
}

table{
	border-collapse:collapse;
	tbody{
		th{
			background-color: #333;
			color: #ddd;
			padding: 5px;

		}
		tr{
			td{
				padding: 5px;		
			}
		}
		tr:nth-child(odd){
			background-color: rgba(190,190,190, 0.6);
			border-top: 1px solid #bbb;
			border-bottom: 1px solid #bbb;
		}
	}
}

/* Form */
form{
  background-image: url(<%= asset_path('roughcloth.png') %>);
  padding: 15px;
  width:550px;
  box-shadow: 0px 1px 8px .5 #000, inset 0px 2px 0px #fff;
	-webkit-box-shadow: 0px 2px 3px #999, inset 0px 1px 0px #fff;
   border-radius: 5px;
  .field{
    label{
      font-size:15px;
      font-weight:bold;
      font-family: verdana, Arial, sans-serif;
      margin-bottom:5px;

    }
    input, textarea{
	-webkit-box-shadow: 0px 2px 2px #FFF, inset 0px 1px 2px #999;
      margin-top:5px;
      font-family: Helvetica, Arial, sans-serif;
      padding: 5px;
      font-size: 16px;
      border: 1px solid #BCBCBC;
      width:500px;
    }
    textarea{
      height:150px;
    }
  }
}


footer{
	color: #eee;
	width:100%;
	
	#transparencia{
		background-color:rgba(255,255,255,0.1);
		height:15px;
		box-shadow: 0px -1px 0px rgba(255,255,255,1);
	}
	section{
		width:300px;
		float:left;
	}
	.separator{
		width:30px;
		height:30px;
		float:left;
	}
	a{
		color : #fff;
		border-bottom: 1px dashed #fff;
		&:hover{
			border-bottom: 1px dashed #d54b1a;
		}	
	}
}
